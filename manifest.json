{
  "manifest_version": 3,
  "name": "tabtool",
  "description": "Additional tab management and share functionality.",
  "version": "2.0",
  "action": {
    "default_icon": "icon_32.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ],
  "commands": {
    "closeLeftTabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Close left tabs"
    },
    "closeRightTabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+U"
      },
      "description": "Close right tabs"
    },
    "duplicateCurrentTab": {
      "suggested_key": {
        "default": "Ctrl+Shift+H"
      },
      "description": "Duplicate current tab"
    },
    "searchSelectedString": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Search selected string"
    }
  },
  "icons": {
    "32": "icon_32.png",
    "128": "icon_128.png"
  },
  "permissions": [
    "tabs",
    "search",
    "clipboardWrite"
  ]
}