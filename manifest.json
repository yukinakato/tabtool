{
  "manifest_version": 3,
  "name": "tabtool",
  "description": "Additional tab management and share functionality.",
  "version": "2.0",
  "action": {
    "default_icon": "icon_32.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "clipboard.js"
      ]
    }
  ],
  "icons": {
    "32": "icon_32.png",
    "128": "icon_128.png"
  },
  "permissions": [
    "tabs",
    "clipboardWrite"
  ]
}